<!DOCTYPE html>
<html>
<head>
  <title>Pierce Engineering</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'fancybox/jquery.fancybox-1.3.4.pack' %>
  <%= stylesheet_link_tag '/javascripts/fancybox/jquery.fancybox-1.3.4.css' %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="wrapper">
		<div class="body grid960">
	<%= render "partials/header.erb" %>
	<%= render "partials/sidebar.erb" %>
			<div id="banner"></div><!-- #banner -->
			<div id="main">
	<%= content_tag :p, notice, :id => 'notice' if notice.present? %>
	<%= content_tag :p, alert, :id => 'alert' if alert.present? %>
			<%= yield %>
			</div><!-- #main -->
		</div><!-- .grid960 -->
	<%= render "partials/footer.erb" %>
	</div><!-- #wrapper -->
</body>
</html>

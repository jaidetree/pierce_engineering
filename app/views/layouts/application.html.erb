<!DOCTYPE html>
<html>
<head>
  <title>Pierce Engineering</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="wrapper">
		<div class="body grid960">
	<%= render "layouts/header.erb" %>
	<%= render "layouts/sidebar.erb" %>
			<div id="banner"></div><!-- #banner -->
			<div id="main">
	<%= content_tag :p, notice, :id => 'notice' if notice.present? %>
	<%= content_tag :p, alert, :id => 'alert' if alert.present? %>
			<% if ! current_page?(:action => 'index', :controller => '/pages' ) then %>
				<div class="col-9">
			<% end %>
			<%= yield %>
			<% if ! current_page?(:action => 'index', :controller => '/pages' ) then %> 
				</div>
			<% end %>
			</div><!-- #main -->
		</div><!-- .grid960 -->
	<%= render "layouts/footer.erb" %>
	</div><!-- #wrapper -->
</body>
</html>

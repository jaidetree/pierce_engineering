<h1>Listing Rifles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Base Price</th>
	<th>Category</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
	<td>$<%= product.base_price %></td>
    <td><%= product.product_category.name %></td>
    <td><%= link_user product.user %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_admin_rifle_path(product) %></td>
    <td><%= link_to 'Destroy', admin_rifle_path(product), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


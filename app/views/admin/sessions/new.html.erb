<h1>Login</h1>

<div class="container">
	<div class="messages">
		<%= content_tag :p, notice, :id => 'notice' if notice.present? %>
		<%= content_tag :p, alert, :id => 'alert' if alert.present? %>
		&nbsp;
	</div>

	<%= form_tag admin_session_path do %>
		<p class="field email">
			<%= label_tag :email %>
			<%= text_field_tag :email %>
		</p>
		<p class="field pw">
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</p>
		<p class="actions">
			<%= submit_tag 'Login', :class => 'submit' %>
			<%= link_to 'Home', root_path, :class => 'home' %>
		</p>
	<% end %>
</div>

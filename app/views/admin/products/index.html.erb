<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Excerpt</th>
    <th>Content</th>
    <th>Price</th>
    <th>Data</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.excerpt %></td>
    <td><%= product.content %></td>
    <td><%= product.price %></td>
    <td><%= product.data %></td>
    <td><%= product.user %></td>
    <td><%= link_to 'Show', [:admin, product] %></td>
    <td><%= link_to 'Edit', admin_edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', [:admin, product], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


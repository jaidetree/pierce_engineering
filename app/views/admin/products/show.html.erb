<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Excerpt:</b>
  <%= @product.excerpt %>
</p>

<p>
  <b>Content:</b>
  <%= @product.content %>
</p>

<p>
  <b>Price(s):</b>
  <%= render '/admin/partials/hash_table', :hash => @product.prices, :prefix => '$'  %>
</p>

<p>
  <b>Data:</b>
  <%= render '/admin/partials/hash_table', :hash => @product.data %>
</p>

<p>
  <b>User:</b>
  <%= link_user @product.user %>
</p>


<% if @product_type == "rifle" %>
<%= link_to 'Edit', edit_admin_rifle_path(@product) %> |
<%= link_to 'Back', admin_rifles_path %>
<% else %>
<%= link_to 'Edit', edit_admin_product_path(@product) %> |
<%= link_to 'Back', admin_products_path %>
<% end %>

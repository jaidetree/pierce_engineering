<%= form_for([:admin, @setting]) do |f| %>
	<% if @setting.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@setting.errors.count, "error") %> prohibited this admin_setting from being saved:</h2>

			<ul>
				<% @setting.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :key %><br />
		<%= f.text_field :key %>
	</div>
	<div class="field data-table">
		<%= f.label :value, "Settings" %>
	</div>
	<div class="actions">
		<%= f.submit :value => "Create Setting Group" %>
	</div>
<% end %>                     
<script type="text/javascript">
	$('.data-table').dataTable( { 
hash: <%=raw @setting.data_hash.to_json %>,
field: 'setting[value]',
name: 'value',
labels: { name: 'Name', value : 'Value' }
} );         
</script>   

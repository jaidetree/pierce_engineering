<h1>Listing settings</h1>

<table>
  <tr>
    <th>Key</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @settings.each do |setting| %>
  <tr>
    <td><%= setting.key %></td>
    <td><%= setting.value %></td>
    <td><%= link_to 'Show', [:admin, setting] %></td>
    <td><%= link_to 'Edit', edit_admin_setting_path(setting) %></td>
    <td><%= link_to 'Destroy', [:admin, setting], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

